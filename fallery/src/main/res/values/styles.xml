<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Fallery" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge"/>

    <!-- light default style -->
    <style name="Fallery.Light">

        <item name="colorPrimary">@color/fallery_light_colorPrimary</item>
        <item name="colorPrimaryDark">@color/fallery_light_colorPrimaryDark</item>
        <item name="colorAccent">@color/fallery_light_colorAccent</item>

        <item name="fallery_background_color">@color/fallery_light_backgroundColor</item>
        <item name="fallery_color_primary">@color/fallery_light_colorPrimary</item>
        <item name="fallery_color_primary_dark">@color/fallery_light_colorPrimaryDark</item>
        <item name="fallery_color_accent">@color/fallery_light_colorAccent</item>
        <item name="fallery_icon_tint_color">@color/fallery_light_iconTintColor</item>
        <item name="fallery_toolbar_icon_tint_color">@color/fallery_light_toolbarIconTintColor
        </item>
        <item name="fallery_primary_text_color">@color/fallery_light_primaryTextColor</item>
        <item name="fallery_secondary_text_color">@color/fallery_light_secondaryTextColor</item>
        <item name="fallery_hint_text_color">@color/fallery_light_hint_text_color</item>
        <item name="fallery_place_holder_color">@color/fallery_light_place_holder_color</item>
        <item name="toolbarNavigationButtonStyle">@style/Toolbar.Button.Navigation.Tinted</item>
        <item name="fallery_toolbar_text_color">@color/fallery_light_toolbar_text_color</item>
        <item name="android:windowBackground">@color/fallery_light_backgroundColor</item>
    </style>

    <!-- dracula default style -->
    <style name="Fallery.Dracula">

        <item name="colorPrimary">@color/fallery_dracula_colorPrimary</item>
        <item name="colorPrimaryDark">@color/fallery_dracula_colorPrimaryDark</item>
        <item name="colorAccent">@color/fallery_dracula_colorAccent</item>

        <item name="fallery_background_color">@color/fallery_dracula_backgroundColor</item>
        <item name="fallery_color_primary">@color/fallery_dracula_colorPrimary</item>
        <item name="fallery_color_primary_dark">@color/fallery_dracula_colorPrimaryDark</item>
        <item name="fallery_color_accent">@color/fallery_dracula_colorAccent</item>
        <item name="fallery_icon_tint_color">@color/fallery_dracula_iconTintColor</item>
        <item name="fallery_toolbar_icon_tint_color">@color/fallery_dracula_toolbarIconTintColor
        </item>
        <item name="fallery_primary_text_color">@color/fallery_dracula_primaryTextColor</item>
        <item name="fallery_secondary_text_color">@color/fallery_dracula_secondaryTextColor</item>
        <item name="fallery_hint_text_color">@color/fallery_dracula_hint_text_color</item>
        <item name="fallery_place_holder_color">@color/fallery_dracula_place_holder_color</item>
        <item name="fallery_toolbar_text_color">@color/fallery_dracula_toolbar_text_color</item>
        <item name="toolbarNavigationButtonStyle">@style/Toolbar.Button.Navigation.Tinted</item>
        <item name="android:windowBackground">@color/fallery_dracula_backgroundColor</item>

    </style>

    <style name="toolbarTitleTextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/fallery_primary_text_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorControlNormal">?attr/fallery_toolbar_icon_tint_color</item>
        <item name="android:textColorPrimary">?attr/fallery_toolbar_text_color</item>
        <item name="colorControlHighlight">#d8d8d8</item>
    </style>

    <style name="AppTheme.Dark.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" >
        <item name="android:colorBackground">?attr/fallery_background_color</item>
        <item name="android:textColor">?attr/fallery_primary_text_color</item>
    </style>

    <style name="Fallery_AlertDialogTheme" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:colorAccent" tools:targetApi="lollipop">?attr/fallery_color_accent</item>
        <item name="colorPrimary">?attr/fallery_color_primary</item>
        <item name="colorPrimaryDark">?attr/fallery_color_primary_dark</item>
        <item name="android:textColorPrimary">?attr/fallery_primary_text_color</item>
        <item name="android:textColorAlertDialogListItem">?attr/fallery_primary_text_color</item>
        <item name="textColorAlertDialogListItem">?attr/fallery_primary_text_color</item>
        <item name="android:textColor">?attr/fallery_primary_text_color</item>
        <item name="android:background">?attr/fallery_background_color</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">?attr/colorAccent</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">?attr/colorAccent</item>
    </style>

    <style name="Toolbar.Button.Navigation.Tinted" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="tint">?attr/fallery_toolbar_icon_tint_color</item>
    </style>

</resources>